<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="PopUpMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:backgroundTint">@color/lightBackgroundColor</item>

    </style>

    <!-- This style is for the splash screen -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/ActiveColor</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/ActiveColor</item>
        <item name="colorControlNormal">@color/ActiveColor</item>
        <item name="colorControlActivated">@color/ActiveColor</item>
    </style>


</resources>
